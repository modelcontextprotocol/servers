{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./test/**/*",
    "./dist/**/*",
    "./node_modules/**/*",
    "**/*.test.ts",
    "**/*.bench.ts",
    "./vitest.config.ts"
  ]
}